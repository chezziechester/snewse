{
  "name": "Snewse",
  "version": "0.5",
  "manifest_version": 2,
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },

  "content_scripts" : [
    {
    "matches": ["*://www.theskimm.com/*"],
    "js": ["content.js"]
    }
  ],

  "description": "stop wasting your time! >:cc",
  "icons": {
    //Icon made by Freepik from Flaticon
    "128": "images/snewse.png"
  },
  "page_action": {
    "default_title": "snewse",
    "default_popup": "popup.html",
    "default_icon": {
      "128": "images/snewse.png"
    }
  },
  "permissions": [
    "storage",
    "declarativeContent",
    "*://*.reddit.com/*"
  ]
}
